# Production Environment Variables
# Copy this file to .env and update values for your environment

# Database Configuration
DATABASE_URL=postgresql+asyncpg://leadvertex:leadvertex123@postgres/leadvertex
DATABASE_URL_SYNC=postgresql://leadvertex:leadvertex123@postgres/leadvertex

# Redis Configuration  
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Application Settings
DEBUG=false
TESTING=false
PROJECT_NAME=LeadVertex Clone
PROJECT_VERSION=1.0.0

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Twilio Configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# SMS.ru Configuration (optional)
SMS_RU_API_ID=your_sms_ru_api_id

# SMSC Configuration (optional)
SMSC_LOGIN=your_smsc_login
SMSC_PASSWORD=your_smsc_password

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=your_email@gmail.com

# Asterisk Configuration (optional)
ASTERISK_HOST=your_asterisk_host
ASTERISK_PORT=5038
ASTERISK_USERNAME=your_asterisk_user
ASTERISK_SECRET=your_asterisk_secret

# Delivery Services Configuration (optional)
CDEK_CLIENT_ID=your_cdek_client_id
CDEK_CLIENT_SECRET=your_cdek_client_secret
RUSSIANPOST_TOKEN=your_russianpost_token
BOXBERRY_TOKEN=your_boxberry_token